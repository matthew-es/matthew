{
  "compilerOptions": {
    "target": "ES2020",        // Modern but stable (optional chaining, etc.)
    "module": "ESNext",        // Modern modules for better tree-shaking
    "lib": [
      "dom",
      "dom.iterable", 
      "ES2020" 
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",     // Add this line
    "paths": {           // Add this block
      "@/*": ["./*"]
    }
  },
  "include": [
    "src"
  ]
}